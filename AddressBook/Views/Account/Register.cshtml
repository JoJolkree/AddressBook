@model AddressBook.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <input type="text" asp-for="Login" class="form-control" placeholder="Login"/>
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Register" class="btn" />
        </div>
    </div>
</form>

<br />
<a asp-action="Login">Login</a>