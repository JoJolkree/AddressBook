@model AddressBook.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="center-block">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <input type="text" asp-for="Login" class="form-control" placeholder="Login"/>
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn" />
        </div>
    </div>
</form>

<a asp-action="Register" asp-controller="Account">Register</a>
